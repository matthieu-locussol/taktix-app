generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
  role     Int    @default(0)

  characters Character[]
}

model Character {
  id                   Int    @id @default(autoincrement())
  name                 String @unique
  map                  String
  profession           String
  pos_x                Int
  pos_y                Int
  direction            String
  talents              String
  talentsPoints        Int
  baseStatistics       String
  baseStatisticsPoints Int
  experience           Int
  health               Int
  teleporters          String
  money                Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  items Item[]

  @@index([userId], name: "userId")
}

model Maintenance {
  id   Int      @id @default(autoincrement())
  date DateTime @default(now())
  done Boolean  @default(false)
}

model Item {
  id            Int     @id @default(autoincrement())
  isUnique      Boolean
  type          String
  level         Int
  requiredLevel Int
  prefixes      String
  suffixes      String

  character   Character @relation(fields: [characterId], references: [id])
  characterId Int

  @@index([characterId], name: "characterId")
}
