{
   "$schema": "../node_modules/@tauri-apps/cli/schema.json",
   "build": {
      "beforeBuildCommand": "pnpm build",
      "beforeDevCommand": "pnpm dev:client",
      "devPath": "http://localhost:5173",
      "distDir": "../dist"
   },
   "package": {
      "productName": "taktix",
      "version": "1.0.2"
   },
   "tauri": {
      "allowlist": {
         "all": false
      },
      "bundle": {
         "active": true,
         "category": "DeveloperTool",
         "copyright": "Matthieu Locussol <dev.matthieu.locussol@gmail.com> (https://www.matthieu-locussol.com)",
         "deb": {
            "depends": []
         },
         "externalBin": [],
         "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
         ],
         "identifier": "com.taktix.app",
         "longDescription": "",
         "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
         },
         "resources": [],
         "shortDescription": "",
         "targets": "all",
         "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
         }
      },
      "security": {
         "csp": null
      },
      "updater": {
         "active": false
      },
      "windows": [
         {
            "fullscreen": false,
            "height": 600,
            "resizable": true,
            "title": "Taktix",
            "width": 800
         }
      ]
   }
}
