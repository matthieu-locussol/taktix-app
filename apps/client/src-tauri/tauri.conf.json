{
   "$schema": "../node_modules/@tauri-apps/cli/schema.json",
   "build": {
      "beforeBuildCommand": "pnpm build",
      "beforeDevCommand": "pnpm dev:client",
      "devPath": "http://localhost:5173",
      "distDir": "../dist"
   },
   "package": {
      "productName": "taktix",
      "version": "1.6.0"
   },
   "tauri": {
      "allowlist": {
         "all": false
      },
      "bundle": {
         "active": true,
         "category": "RolePlayingGame",
         "copyright": "Matthieu Locussol <dev.matthieu.locussol@gmail.com> (https://www.matthieu-locussol.com)",
         "deb": {
            "depends": []
         },
         "externalBin": [],
         "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
         ],
         "identifier": "com.taktix.app",
         "longDescription": "A small browser game written in TypeScript.",
         "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
         },
         "resources": [],
         "shortDescription": "A small browser game written in TypeScript.",
         "targets": "all",
         "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
         }
      },
      "macOSPrivateApi": true,
      "security": {
         "csp": null
      },
      "updater": {
         "active": true,
         "endpoints": ["https://taktix.vercel.app/api/version"],
         "dialog": true,
         "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE3NjhGREQ0Rjg0RjhERQpSV1RlK0lSUDNZOTJBVDh6bURQZ0dWckZSbTljcmtWSG1Oc2x1RmNzZzdhZlNCZC8vdllrd3VDRAo="
      },
      "windows": [
         {
            "width": 100,
            "height": 100,
            "decorations": false,
            "url": "/splashscreen.html",
            "label": "splashscreen",
            "transparent": true,
            "center": true,
            "alwaysOnTop": true,
            "fullscreen": false
         },
         {
            "fullscreen": false,
            "height": 600,
            "resizable": true,
            "title": "Taktix",
            "width": 800,
            "visible": false,
            "url": "/index.html",
            "center": true,
            "label": "main"
         }
      ]
   }
}
